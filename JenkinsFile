pipeline {
    agent any
 
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
 
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/harish44442/POC4_terraform_validation.git'
            }
        }
 
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
 
        stage('Terraform Validate') {
            steps {
                sh 'terraform validate'
            }
        }
 
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }
 
        stage('Terraform Apply (Optional)') {
            when { expression { return false } } // set to true to auto-apply
            steps {
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }
 
    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        failure {
            mail to: 'you@company.com', subject: 'Terraform Jenkins Pipeline Failed'
        }
    }
}
